<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Succes" />

            <Button
                android:onClick="Succes"
                android:id="@+id/btnSucces"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error" />

            <Button
                android:onClick="Error"
                android:id="@+id/btnError"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning" />

            <Button
                android:onClick="Warning"
                android:id="@+id/btnWarning"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic" />

            <Button
                android:onClick="Basic"
                android:id="@+id/btnBasic"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question" />

            <Button
                android:onClick="Question"
                android:id="@+id/btnQuestion"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading" />

            <Button
                android:onClick="Loading"
                android:id="@+id/btnLoading"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done" />

            <Button
                android:id="@+id/btnDone"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fail" />

            <Button
                android:id="@+id/btnFail"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Done or Fail" />

            <Button
                android:onClick="ChangeDone"
                android:id="@+id/btnChangeDone"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cahnge Fail" />

            <Button
                android:onClick="ChangeFail"
                android:id="@+id/btnChangeFail"
                style="@style/dialog_blue_button"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Try me!" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>